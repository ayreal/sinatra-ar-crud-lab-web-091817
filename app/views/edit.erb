<h1>Edit Post</h1>
<%= "posts/#{@post.id}" %>
  <form action="/posts/<%= @post.id %>" method="post">
    <input name="_method" value="patch" hidden="true" id="hidden">

<!-- Params need to be passed into the name tag as a HASH -->
    <label for="name">Name: </label>
    <input type="text" name="post[name]" value="<%= @post.name %>" id="name">

    <label for="content">Content: </label>
    <input type="text" name="post[content]" value="<%= @post.content %>" id="content">

    <input type="submit" value="submit">

  </form>
